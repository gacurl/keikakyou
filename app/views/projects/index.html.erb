<div class="card">
  <div class="card-body">
    <h2 class="card-title d-flex justify-content-between mb-4">
      <span>Projects</span>
      <%= link_to "New project", new_project_path, class: "btn btn-primary" %>
    </h2>

    <% @projects.each do |project| %>
      <%= link_to project, class: 'text-decoration-none' do %>
        <div class="card mb-3">
          <div class="card-body"></div>
            <div class="mb-3">
              <span class="badge bg-<%= project.badge_color %> mb-3"><%= project.status %></span>
              <span class='text-secondary'>
                <small>
                  <%= project.percent_complete %>% complete
                  (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
                </small>
              </span>
            </div>
              <h5 class="card-title text-dark"><%= project.name%></h5>
             <p class="text-secondary"><%= project.description %></p>
          </div>
        </div>
      <% end %> <%# do block %>
    <% end %>
  </div>
</div> <%# /card %>


