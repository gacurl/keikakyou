<% if user_signed_in? %>
  <div class="card">
    <div class="card-body">
      <h2 class="card-title d-flex justify-content-between mb-4">
        <span>Projects</span>
        <%= link_to "New project", new_project_path, class: "btn btn-primary" %>
      </h2>

      <% @projects.each do |project| %>
        <%= link_to project, class: 'text-decoration-none' do %>
          <div class="card mb-2">
            <div class="card-body">
                <span class="badge bg-<%= project.badge_color %>">
                  <%= project.status %>
                </span>
                <span class="text-secondary">
                  <small>
                    <%= project.percent_complete %>% complete
                    (<%= project.total_complete %>/<%= project.total_tasks %> tasks)
                  </small>
                </span>
              </div>
              <div class="card-body ml-2">
                <h5><%= project.name%></h5>
                <p><%= project.description %></p>
              </div>
            </div>
        <% end %> <%# /link_to do block %>
      <% end %> <%# /projects do block %>
      
  </div> <%# /card %>
<% else %>
	<%= render partial: 'home' %>
<% end %>


